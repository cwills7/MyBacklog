<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/card_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_string_size"/>

        <TextView
            android:id="@+id/card_item_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/title_string_size"/>

        <RelativeLayout
            android:id="@+id/hidden_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_item_priority">
            <TextView
                android:id="@+id/hidden_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_string_size"/>
            <TextView
                android:id="@+id/hidden_item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hidden_item_description"
                android:textSize="@dimen/detail_string_size"/>
        </RelativeLayout>
    </RelativeLayout>



</android.support.v7.widget.CardView>